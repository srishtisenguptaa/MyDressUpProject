@{
    ViewData["Title"] = "Your Wishlist ❤️";
}
<link rel="stylesheet" href="~/css/Wishlist.css" asp-append-version="true" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Your Wishlist ❤️</h2>
    <div id="wishlist-container" class="row gy-4"></div>
</div>


@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const container = document.getElementById('wishlist-container');

            try {
                const response = await fetch('/Wishlist/GetUserWishlist');
                const result = await response.json();

                if (!result.success || !result.data || result.data.length === 0) {
                    container.innerHTML = `<p class="text-center text-muted">Your wishlist is empty!</p>`;
                    return;
                }

                container.innerHTML = result.data.map(item => `
                    <div class="col-md-3 col-sm-6">
                        <div class="card shadow-sm h-100">
                            <img src="${item.imageUrl}" class="card-img-top" alt="${item.title}">
                            <div class="card-body text-center">
                                <h6 class="card-title">${item.title}</h6>
                                <p class="card-text fw-semibold">₹${item.price}</p>
                                <div class="divider"></div>
                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <button class="wishlist-btn remove-btn" data-id="${item.productId}">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                    <button class="wishlist-btn move-to-cart-btn" data-id="${item.productId}">
                                        <i class="bi bi-cart"></i> Move to Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `).join('');
            } catch (err) {
                console.error("Failed to load wishlist:", err);
                container.innerHTML = `<p class="text-center text-danger">Error loading wishlist.</p>`;
            }

            // Handle button actions
            container.addEventListener('click', async (e) => {
                const removeBtn = e.target.closest('.remove-btn');
                const moveBtn = e.target.closest('.move-to-cart-btn');

                // Remove button logic
                if (removeBtn) {
                    const productId = parseInt(removeBtn.dataset.id);
                    try {
                        const res = await fetch('/Wishlist/Remove', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productId })
                        });

                        const result = await res.json();
                        if (result.success) {
                            removeBtn.closest('.col-md-3').remove();
                            if (container.querySelectorAll('.col-md-3').length === 0) {
                                container.innerHTML = `<p class="text-center text-muted">Your wishlist is empty!</p>`;
                            }
                        }
                    } catch (err) {
                        console.error("Failed to remove item:", err);
                    }
                }

                // Move to Cart button logic
                if (moveBtn) {
                    const productId = parseInt(moveBtn.dataset.id);
                    try {
                        const res = await fetch('/Cart/Add', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ productId })
                        });

                        const result = await res.json();
                        if (result.success) {
                            alert("Item moved to cart 🛒");
                            moveBtn.closest('.col-md-3').remove();

                            if (container.querySelectorAll('.col-md-3').length === 0) {
                                container.innerHTML = `<p class="text-center text-muted">Your wishlist is empty!</p>`;
                            }
                        } else {
                            alert(result.message || "Failed to move item to cart.");
                        }
                    } catch (err) {
                        console.error("Failed to move item to cart:", err);
                    }
                }
            });
        });
    </script>
}
