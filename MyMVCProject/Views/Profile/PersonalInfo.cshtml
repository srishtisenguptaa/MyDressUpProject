@model PersonalInfoViewModel

@{
    ViewData["Title"] = "My Information";
}

<link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />

<div class="container my-5">
    <h2 class="text-center mb-4 fancy-heading">My Personal Information 💫</h2>

    <div class="card shadow-lg p-4 rounded-4">
        <div class="mb-3">
            <label class="form-label fw-bold">Full Name</label>
            <input class="form-control" value="@Model.FullName" readonly />
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Email</label>
            <input class="form-control" value="@Model.Email" readonly />
        </div>

        <hr />

        <h4 class="mt-4 mb-3 text-secondary">Saved Addresses</h4>

        <div id="addressContainer" class="row gy-3">
            @if (Model.Addresses != null && Model.Addresses.Any())
            {
                foreach (var addr in Model.Addresses)
                {
                    <div class="col-md-6">
                        <div class="card p-3 shadow-sm border-0 rounded-4 bg-light position-relative">
                            <textarea class="form-control border-0 bg-transparent address-textarea"
                              data-id="@addr.AddressId" readonly>@addr.Address</textarea>

                            <div class="position-absolute top-0 end-0 mt-2 me-2">
                                <button class="btn btn-sm btn-outline-primary me-1 edit-btn" data-id="@addr.AddressId" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger delete-btn" data-id="@addr.AddressId" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-muted">
                    <p>No addresses saved yet.</p>
                </div>
            }
        </div>

        <div class="mt-5">
            <h5 class="mb-2">Add a new address</h5>
            <textarea id="newAddress" class="form-control rounded-3" placeholder="Type your address here..."></textarea>
            <button id="addAddressBtn" class="btn btn-primary mt-3 px-4">Add Address</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            // Add Address
            const addBtn = document.getElementById("addAddressBtn");
            if (addBtn) {
                addBtn.addEventListener("click", () => {
                    const address = document.getElementById("newAddress").value.trim();
                    if (!address) {
                        alert("Please enter an address.");
                        return;
                    }

                    fetch('/Profile/AddAddress', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: new URLSearchParams({ address: address })
                    })
                        .then(res => res.json())
                        .then(data => {
                            alert(data.message);
                            if (data.success) location.reload();
                        });
                });
            }

            // Delete Address
            document.querySelectorAll(".delete-btn").forEach(btn => {
                btn.addEventListener("click", () => {
                    const id = btn.dataset.id;
                    if (confirm("Are you sure you want to delete this address?")) {
                        fetch('/Profile/DeleteAddress', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                            body: new URLSearchParams({ id: id })
                        })
                            .then(res => res.json())
                            .then(data => {
                                alert(data.message);
                                if (data.success) location.reload();
                            });
                    }
                });
            });

            // Edit Address
                 // Edit address
        document.querySelectorAll(".edit-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                const id = btn.dataset.id;
                const textarea = document.querySelector(`textarea[data-id="${id}"]`);
                const isEditing = !textarea.readOnly;

                if (isEditing) {
                    const newText = textarea.value.trim();

                    fetch('/Profile/EditAddress', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                        body: new URLSearchParams({ id: id, newAddress: newText })
                    })
                    .then(res => res.json())
                    .then(data => {
                        alert(data.message);
                        if (data.success) textarea.readOnly = true;
                    });
                } else {
                    textarea.readOnly = false;
                    textarea.focus();
                }
            });
        });

        });
    </script>
}
