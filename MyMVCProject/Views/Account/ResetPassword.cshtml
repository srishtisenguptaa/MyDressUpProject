@{
    ViewData["Title"] = "Reset Password";
}

<link rel="stylesheet" href="~/css/loginpage.css" asp-append-version="true" />

<div class="container" style="max-width:420px; margin-top:40px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h4 class="card-title mb-3 text-center">Reset Your Password 🔐</h4>

            <form asp-action="ResetPassword" method="post">

                <!-- ✅ Critical token -->
                <input type="hidden" name="token" value="@ViewBag.Token" />

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="newPassword" required class="form-control" placeholder="Enter new password" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" name="confirmPassword" required class="form-control" placeholder="Confirm new password" />
                </div>

                <button type="submit" class="btn btn-success w-100 mb-2">
                    Reset Password
                </button>

                <div class="text-center mt-2">
                    <a href="/Account/Login" class="text-decoration-none small">
                        Back to Login
                    </a>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center small">
                        @ViewBag.Error
                    </div>
                }
            </form>
        </div>
    </div>
</div>
