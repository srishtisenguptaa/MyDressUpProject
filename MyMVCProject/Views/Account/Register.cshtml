@model MyMVCProject.Models.User
@* @model MyMVCProject.Views.Account.RegisterModel
 *@

@{

    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />

<div class="register-container">
    <h3 class="register-title">Create an Account ✨</h3>

    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="mb-3">
            <label for="FullName" class="form-label">Full Name</label>
            <input type="text" class="form-control" id="FullName" name="FullName" required placeholder="Enter your full name" />
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="example@dressup.com" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required placeholder="Enter password" />
        </div>

        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required placeholder="Confirm password" />
        </div>

        <button type="submit" class="btn-custom btn-register">Register</button>

        <a href="/Account/Login" class="btn-custom btn-login text-center d-block text-decoration-none">Back to Login</a>

        @if (ViewBag.Error != null)
        {
            <p class="text-danger mt-3">@ViewBag.Error</p>
        }

        @if (ViewBag.Message != null)
        {
            <p class="text-success mt-3">@ViewBag.Message</p>
        }
    </form>
</div>