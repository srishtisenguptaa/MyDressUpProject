@{
    ViewData["Title"] = "Login with OTP";
}

<link rel="stylesheet" href="~/css/loginpage.css" asp-append-version="true" />

<div class="container" style="max-width:420px; margin-top:40px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h4 class="card-title mb-3 text-center">Login with OTP 🔐</h4>

            <!-- Step 1: Ask for email -->
            <div id="step-send" class="">
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" id="email" class="form-control" placeholder="you@example.com" required />
                </div>

                <button id="btnSendOtp" class="btn btn-dark w-100 mb-2" onclick="sendOtp()">Send OTP</button>

                <div class="text-center">
                    <a href="/Account/Login" class="text-decoration-none">Back to password login</a>
                </div>

                <div id="sendMessage" class="mt-3 text-center small text-success" style="display:none;"></div>
            </div>

            <!-- Step 2: Enter OTP -->
            <div id="step-verify" style="display:none;">
                <p class="small text-muted">OTP was sent to <span id="displayEmail"></span>. It will expire in <strong id="otpExpiry">5</strong> minutes.</p>

                <div class="mb-3">
                    <label for="otp" class="form-label">Enter OTP</label>
                    <input type="text" id="otp" class="form-control" maxlength="6" placeholder="6-digit code" />
                </div>

                <button id="btnVerifyOtp" class="btn btn-success w-100 mb-2" onclick="verifyOtp()">Verify OTP</button>

                <div class="d-flex justify-content-between align-items-center small">
                    <div>
                        <button id="btnResend" class="btn btn-link p-0" onclick="resendOtp()" disabled>Resend OTP</button>
                    </div>
                    <div>
                        <span id="resendTimer">00:30</span>
                    </div>
                </div>

                <div id="verifyMessage" class="mt-3 text-center small" style="display:none;"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let resendCountdown = 30; // seconds for resend cooldown
        let resendInterval = null;

        function showStep(step) {
            document.getElementById('step-send').style.display = step === 'send' ? '' : 'none';
            document.getElementById('step-verify').style.display = step === 'verify' ? '' : 'none';
        }

        async function sendOtp() {
            const email = document.getElementById('email').value?.trim();
            if (!email) {
                alert('Enter your email first.');
                return;
            }

            toggleSendButtons(true);
            try {
                const res = await fetch('/Account/SendOtp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `email=${encodeURIComponent(email)}`
                });
                const data = await res.json();

                if (data.success) {
                    // show verify step
                    document.getElementById('displayEmail').innerText = email;
                    document.getElementById('sendMessage').innerText = 'OTP sent to your email.';
                    document.getElementById('sendMessage').style.display = 'block';

                    // optional: for testing, the controller may return OTP in response
                    if (data.otp) {
                        console.info('Test OTP (returned by server):', data.otp);
                    }

                    showStep('verify');
                    startResendTimer(resendCountdown);

                } else {
                    alert(data.message || 'Failed to send OTP.');
                }
            } catch (err) {
                console.error(err);
                alert('Network error while sending OTP.');
            } finally {
                toggleSendButtons(false);
            }
        }

        async function verifyOtp() {
            const email = document.getElementById('displayEmail').innerText;
            const otp = document.getElementById('otp').value?.trim();

            if (!otp) {
                alert('Enter the OTP.');
                return;
            }

            toggleVerifyButtons(true);
            try {
                const res = await fetch('/Account/VerifyOtp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `email=${encodeURIComponent(email)}&otp=${encodeURIComponent(otp)}`
                });
                const data = await res.json();

                if (data.success && data.token) {
                    // Store JWT (you may choose cookie or localStorage)
                    localStorage.setItem('jwtToken', data.token);

                    // Optionally show a message and redirect
                    document.getElementById('verifyMessage').innerText = 'Login successful! Redirecting...';
                    document.getElementById('verifyMessage').style.color = 'green';
                    document.getElementById('verifyMessage').style.display = 'block';

                    // redirect to home after short delay
                    setTimeout(() => window.location.href = '/', 900);

                } else {
                    document.getElementById('verifyMessage').innerText = data.message || 'Invalid OTP';
                    document.getElementById('verifyMessage').style.color = 'crimson';
                    document.getElementById('verifyMessage').style.display = 'block';
                }
            } catch (err) {
                console.error(err);
                alert('Network error while verifying OTP.');
            } finally {
                toggleVerifyButtons(false);
            }
        }

        async function resendOtp() {
            // reuse same email on screen
            const email = document.getElementById('displayEmail').innerText;
            if (!email) return;

            document.getElementById('btnResend').disabled = true;
            try {
                const res = await fetch('/Account/SendOtp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `email=${encodeURIComponent(email)}`
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById('verifyMessage').innerText = 'OTP resent to your email.';
                    document.getElementById('verifyMessage').style.color = 'green';
                    document.getElementById('verifyMessage').style.display = 'block';
                    startResendTimer(resendCountdown);
                } else {
                    alert(data.message || 'Failed to resend OTP.');
                    document.getElementById('btnResend').disabled = false;
                }
            } catch (err) {
                console.error(err);
                alert('Network error while resending OTP.');
                document.getElementById('btnResend').disabled = false;
            }
        }

        function startResendTimer(seconds) {
            let timeLeft = seconds;
            document.getElementById('btnResend').disabled = true;
            updateTimerDisplay(timeLeft);

            if (resendInterval) clearInterval(resendInterval);
            resendInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay(timeLeft);
                if (timeLeft <= 0) {
                    clearInterval(resendInterval);
                    document.getElementById('btnResend').disabled = false;
                    document.getElementById('resendTimer').innerText = '';
                }
            }, 1000);
        }

        function updateTimerDisplay(sec) {
            if (sec <= 0) {
                document.getElementById('resendTimer').innerText = '';
                return;
            }
            const mm = String(Math.floor(sec / 60)).padStart(2, '0');
            const ss = String(sec % 60).padStart(2, '0');
            document.getElementById('resendTimer').innerText = `${mm}:${ss}`;
        }

        function toggleSendButtons(disabled) {
            document.getElementById('btnSendOtp').disabled = disabled;
        }
        function toggleVerifyButtons(disabled) {
            document.getElementById('btnVerifyOtp').disabled = disabled;
            document.getElementById('otp').disabled = disabled;
        }
    </script>
}
