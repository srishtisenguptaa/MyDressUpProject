@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="~/css/loginpage.css" asp-append-version="true" />

<div class="container" style="max-width:420px; margin-top:40px;">
    <div class="card shadow-sm">
        <div class="card-body p-4">
            <h4 class="card-title mb-3 text-center">Forgot Password 🔑</h4>

            <form method="post" asp-action="SendResetLink">
                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <input type="email" name="email" required class="form-control" placeholder="you@example.com" />
                </div>

                <button type="submit" class="btn btn-dark w-100 mb-2">
                    Send Reset Link
                </button>

                <div class="text-center mt-2">
                    <a href="/Account/Login" class="text-decoration-none small">
                        Back to Login
                    </a>
                </div>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3 text-center small">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>
