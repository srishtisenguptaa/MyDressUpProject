    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');

            // Only attach listener if both elements exist
            if (!searchForm || !searchInput) return;

            // Prevent full page reload and handle Enter key
            searchForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const query = searchInput.value.trim();
                if (!query) return;

                // Only handle search if we're on the Index page
                if (window.location.pathname.toLowerCase() !== '/home/index' &&
                    window.location.pathname !== '/') {
                    window.location.href = `/Home/Index?query=${encodeURIComponent(query)}`;
                    return;
                }

                const gallery = document.getElementById('gallery');
                if (!gallery) {
                    console.error("Gallery element not found on page.");
                    return;
                }

                try {
                    const response = await fetch(`/Home/SearchProducts?query=${encodeURIComponent(query)}`);
                    const html = await response.text();
                    gallery.innerHTML = html;
                } catch (err) {
                    console.error("Search error:", err);
                }
            });
        });
    </script>


